{
	"$schema": "https://developer.microsoft.com/json-schemas/teams/v1.25/MicrosoftTeams.schema.json",
	"manifestVersion": "1.25",
	"version": "1.0.0",
	"id": "${{TEAMS_APP_ID}}",
	"developer": {
		"name": "Teams Whiteboard",
		"websiteUrl": "https://localhost:53000",
		"privacyUrl": "https://localhost:53000/privacy",
		"termsOfUseUrl": "https://localhost:53000/terms"
	},
	"name": {
		"short": "Whiteboard",
		"full": "Teams Whiteboard â€” Draw.io-style Diagramming"
	},
	"description": {
		"short": "Infinite canvas whiteboard with diagramming tools",
		"full": "A Draw.io-style infinite canvas whiteboard for Microsoft Teams. Create diagrams, flowcharts, and sketches collaboratively in real-time during calls or on your own."
	},
	"icons": {
		"outline": "outline.png",
		"color": "color.png"
	},
	"accentColor": "#6264A7",
	"staticTabs": [
		{
			"entityId": "whiteboard",
			"name": "Whiteboard",
			"contentUrl": "${{TAB_ENDPOINT}}/index.html",
			"websiteUrl": "${{TAB_ENDPOINT}}/index.html",
			"scopes": ["personal", "groupChat", "team"]
		}
	],
	"configurableTabs": [
		{
			"configurationUrl": "${{TAB_ENDPOINT}}/index.html",
			"canUpdateConfiguration": true,
			"scopes": ["team", "groupChat"],
			"context": ["channelTab", "privateChatTab", "meetingChatTab", "meetingSidePanel", "meetingStage"]
		}
	],
	"permissions": ["identity", "messageTeamMembers"],
	"validDomains": [
		"${{TAB_DOMAIN}}"
	],
	"webApplicationInfo": {
		"id": "${{AAD_APP_CLIENT_ID}}",
		"resource": "api://${{TAB_DOMAIN}}/${{AAD_APP_CLIENT_ID}}"
	}
}
